  - /home/ian/.config/alacritty/rose_pin/rose-pine.yml
## Padding
window:
  padding:
    x: 2
    y: 2
  dynamic_padding: true
  ## tarnsparencias
  opacity: 0.95

## Fuentes
font:
  normal:
    family: Cascadia Code
    style: Regular

  bold:
    family: Cascadia Code
    style: Bold

  italic:
    family: Dank Mono
    style: Italic

  bold_italic:
    family: Cascadia Code
    style: Bold Italic

  size: 4.5
theme: Splurge

draw_bold_text_with_bright_colors: true

## Cursor
cursor:
  style:
    shape: Beam
  vi_mode_style:
    shape: Block
